<h1 class="container display-4 text-center">New Movie</h1>

<div class="container text-center">
    <%= form_with model: @movie, local: true do |form| %>
        <p>
            <%= form.label :title %> 
            <%= form.text_field :title %>
        </p>
        <p>
            <%= form.label :genre %> 
            <%= form.text_field :genre %>
        </p>
        <p>
            <%= form.label :runtime %> 
            <%= form.text_field :runtime, type: 'number' %>
        </p>
        <p>
            <%= form.label :release_date %> 
            <%= form.text_field :release_date, type: 'date' %>
        </p>
        <button type="button" class="btn btn-light btn-lg"><%= form.submit %></button>
    <% end %>
</div>