<p id="notice"><%= notice %></p>

<h1 class="container display-4 text-center">Reviews</h1><br>

<table class="container text-center">
  <thead>
    <tr>
      <th>Rating</th>
      <th>Author</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.rating %></td>
        <td><%= review.author %></td>
        <td><%= review.content %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br>

<div class="container text-center">
  <button type="button" class="btn btn-light btn-lg btn-block"><%= link_to 'New Review', new_review_path %></button>
</div>
